<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style1">
        <item name="android:textColor">#ff0000</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="style1.ddd">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:dialogTitle">please make it easy!</item>
        <item name="android:layout_marginLeft">50dp</item>
    </style>

    <style name="theme1">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@mipmap/bz2</item>
        <!--   <item name="android:windowFrame">@drawable/window_border</item>-->
    </style>

    <!--
      Base application theme, dependent on API level. This theme is replaced
      by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
  -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!--  <item name="android:theme">@android:style/Theme.NoTitleBar</item>-->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="HoloButton.Borderless.Back" parent="@android:style/Widget.Button">
        <item name="android:background">@color/transparent</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/circle_menu_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/circle_menu_bottom_out</item>
    </style>

    <style name="HorizScrollViewItem">
        <item name="android:paddingRight">50dp</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:text">Sample Item</item>
    </style>

    <style name="Loading_dialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/colorTransport</item>
    </style>


    <style name="myTabStyle">
        <item name="android:textSize">25sp</item>
    </style>


    <declare-styleable name="RetailPullDownAnimationView">
        <attr name="animDurationMills" format="integer" />
    </declare-styleable>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="XTabLayout_Default_Style" parent="Base.Widget.Design.TabLayout">
        <item name="x_tabMaxWidth">200dp</item>
        <item name="x_tabIndicatorColor">?attr/colorAccent</item>
        <item name="x_tabIndicatorHeight">2dp</item>
        <item name="x_tabPaddingStart">12dp</item>
        <item name="x_tabPaddingEnd">12dp</item>
        <item name="x_tabBackground">?attr/selectableItemBackground</item>
        <item name="x_tabTextAppearance">@style/TextAppearance.Design.Tab</item>
        <item name="x_tabSelectedTextColor">?android:textColorPrimary</item>

        <item name="x_tabGravity">fill</item>
        <item name="x_tabMode">fixed</item>

    </style>
</resources>