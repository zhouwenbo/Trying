<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:tabIndicatorHeight="0dp"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="#000070"
        app:tabTextAppearance="@style/myTabStyle"
        app:tabTextColor="#000000" />


    <com.fheebiy.trying.view.xtablayout.XTabLayout
        android:id="@+id/tabLayout2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_35"
        app:x_tabIndicatorHeight="0dp"
        android:background="#F9F9F9"
        app:x_tabPadding="0dp"
        app:x_tabMinWidth="0dp"
        app:x_tabPaddingStart="0dp"
        app:x_tabMode="scrollable">

    </com.fheebiy.trying.view.xtablayout.XTabLayout>


    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/background_tab_pressed">

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <com.fheebiy.trying.view.RetailPullDownAnimationView
            android:id="@+id/loading_anim"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_centerInParent="true">

        </com.fheebiy.trying.view.RetailPullDownAnimationView>


    </RelativeLayout>


</LinearLayout>